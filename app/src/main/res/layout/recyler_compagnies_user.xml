<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTitle"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recId"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"
            android:layout_toEndOf="@+id/recEmail"/>



        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recEmail"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Email"
            android:layout_below="@+id/recTitle"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/recSumm"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Summary"
            android:textAlignment="center"
            android:layout_below="@+id/recId"
            android:layout_toEndOf="@+id/recTitle"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recCategory"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Category"
            android:layout_below="@+id/recEmail"
            android:layout_marginStart="20dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recDescription"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Description"
            android:textAlignment="center"
            android:layout_below="@+id/recSumm"
            android:layout_toEndOf="@+id/recContact"
            android:layout_marginStart="90dp"
            android:visibility="gone"
            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:id="@+id/recContact"
            android:textColor="@color/purple"
            android:textSize="20sp"
            android:text="Contact"
            android:layout_below="@+id/recCategory"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>