<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDetailsUser"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/addDetails"
                android:text="Add Details"
                android:textSize="24sp"
                android:textColor="@color/purple_700"
                android:textAlignment="center"
                android:padding="10dp"
                android:background="@drawable/edit_text"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work experience : "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />
            <EditText
                android:id="@+id/experiences"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:drawablePadding="8dp"
                android:hint="Work experience (in years)"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional experiences : "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                />
            <EditText
                android:id="@+id/specialization"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text"
                android:drawablePadding="8dp"
                android:hint="Specialization"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills : "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                />

            <EditText
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text"
                android:drawablePadding="8dp"
                android:hint="Skills"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education : "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="22dp"
                />

            <EditText
                android:id="@+id/education"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text"
                android:drawablePadding="8dp"
                android:hint="Education"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Documents : "
                 android:textSize="20sp"
                 android:textColor="@color/purple_500"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="22dp"
                 />
              <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                       <EditText
                           android:id="@+id/pdf"
                           android:layout_width="200dp"
                           android:layout_height="50dp"
                           android:background="@drawable/edit_text"
                           android:drawablePadding="8dp"
                           android:hint="Upload CV (PDF)"
                           android:padding="8dp"
                           android:textColor="@color/black"
                           android:textColorHighlight="@color/cardview_dark_background"
                           android:layout_marginLeft="30dp"
                           android:layout_marginRight="30dp"
                           android:layout_marginTop="10dp"
                           android:drawableLeft="@drawable/baseline_arrow_circle_up_24"
                           android:inputType="text"

                           />

                   <Button
                       android:id="@+id/uploadButton"
                       android:layout_width="wrap_content"
                       android:layout_height="60dp"
                       android:text="Upload File"
                       android:layout_gravity="center_horizontal"
                       android:paddingTop="8dp"
                       android:onClick="onUploadButtonClick" />
               </LinearLayout>


              <Button
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:id="@+id/addDet"
                  android:text="Add Details"
                  android:textSize="18sp"
                  android:layout_marginTop="15dp"
                  android:backgroundTint="@color/purple"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"

                  />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="30dp"/>
          </LinearLayout>
      </ScrollView>
  </LinearLayout>