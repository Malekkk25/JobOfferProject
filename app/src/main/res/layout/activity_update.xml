<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="@color/purple"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/update_job_title"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/jobtitle"
                android:drawablePadding="8dp"
                android:hint="Job Title "
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />

            <EditText

                android:id="@+id/update_job_startdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/baseline_access_time_24"
                android:drawablePadding="8dp"
                android:hint="Pick Date"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Location: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/update_job_location"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/baseline_add_location_alt_24"
                android:drawablePadding="8dp"
                android:hint="Job Location"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textMultiLine"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Category: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />
            <EditText
                android:id="@+id/update_job_Category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/baseline_category_24"
                android:drawablePadding="8dp"
                android:hint="Job Category"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Years of Experience: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />
            <EditText
                android:id="@+id/update_job_Experience"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/experience"
                android:drawablePadding="8dp"
                android:hint="Required years of Experience"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="numberDecimal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Skills: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />
            <EditText
                android:id="@+id/update_job_skillsrequired"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/experience"
                android:drawablePadding="8dp"
                android:hint="Skills Required"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textMultiLine"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Description: "
                android:textSize="20sp"
                android:textColor="@color/purple_500"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                />
            <EditText
                android:id="@+id/update_job_Description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/baseline_description_24"
                android:drawablePadding="8dp"
                android:hint="Job Description"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="textMultiLine"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/btn_update_job_post"
                android:text="Update Job"
                android:backgroundTint="@color/purple"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                />


        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>